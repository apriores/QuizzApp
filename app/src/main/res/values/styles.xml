<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="questionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/question_size</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="movieTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/movie_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movieImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">195dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="questionSeparatorLine">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="editTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textSize">@dimen/question_size</item>
        <item name="android:textColor">@color/answerColor</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:backgroundTint">@android:color/holo_red_light</item>
    </style>

    <style name="movieSeparator_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="questions_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/layout_bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="answer_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/answerColor</item>
        <item name="android:textSize">@dimen/answer_size</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="radio_buttons_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="radio_group_vertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
